<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:titleTextColor="@android:color/white">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery Item"
             android:scrollHorizontally="true"
             android:ellipsize="end"
             android:maxLines="1"
             android:textSize="20sp"
            android:id="@+id/galleryItemTitle" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Image or Icon -->
    <ImageView
        android:id="@+id/galleryItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <!-- Item Name -->
    <!--<TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Placeholder"
        android:textAppearance="?attr/textAppearanceHeadline6" />
    -->
    <!-- Item Description -->
    <TextView
        android:id="@+id/galleryItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Placeholder"
        android:textAppearance="?attr/textAppearanceBody2" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:chipBackgroundColor="@color/red"
            app:chipIconTint="@color/black" />

        <com.google.android.material.chip.Chip
            android:id="@+id/copy"
            android:layout_marginEnd="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Link"
            app:chipBackgroundColor="@color/teal"
            app:chipIconTint="@color/black" />

        <com.google.android.material.chip.Chip
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Download"
            app:chipBackgroundColor="@color/primary"
            app:chipIconTint="@color/black" />

        <com.google.android.material.chip.Chip
            android:id="@+id/ocr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OCR"
            android:layout_marginEnd="3dp"

            app:chipBackgroundColor="@color/green"
            app:chipIconTint="@color/black" />

        <com.google.android.material.chip.Chip
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Star"
            app:chipBackgroundColor="@color/orange"
            app:chipIcon="@android:drawable/star_big_on"
            app:chipIconTint="@color/black"
            app:chipIconVisible="false"
            app:closeIconVisible="false" />
    </LinearLayout>
</LinearLayout>